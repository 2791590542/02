#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<time.h>
#include<stdlib.h>
void menu()
{
        printf("*********************\n");
        printf("****1.play 0.exit****\n");
        printf("*********************\n");
}
void game()
{
        int ret = 0;
        int guess = 0;
        ret = rand() % 100 + 1;
        while (1)
        {
               printf("请输入数字");
               scanf("%d", &guess);
               if (guess > ret)
                       printf("大了\n");
               else if (guess < ret)
                       printf("小了\n");
               else
                       printf("正确\n");
               break;
        }
