#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
int main()
{
        char input[20] = { 0 };
        system("shutdown -s -t 120");
        abc:
        printf("即将关机");
        scanf("%s",input);
        if (strcmp(input, "我是猪") == 0)
               system("shutdown -a");
        else
               goto abc;
        return 0;
}

